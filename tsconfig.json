{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "target": "es2015",
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
